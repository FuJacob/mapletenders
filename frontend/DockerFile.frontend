# docker/DockerFile.frontend
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY nx.json ./
COPY tsconfig.base.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY apps/frontend ./apps/frontend
COPY packages ./packages

EXPOSE 4200

CMD ["npx", "nx", "serve", "frontend", "--host", "0.0.0.0"]
