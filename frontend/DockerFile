FROM node:22-bookworm

WORKDIR /app

# Install dependencies
RUN apt-get update && apt-get install -y git && rm -rf /var/lib/apt/lists/*

COPY package*.json ./
RUN npm install        

COPY . .

EXPOSE 3000

CMD ["npm", "run", "dev", "--host"]
# Or, for production:
# RUN npm run build
# CMD ["npm", "run", "preview"]